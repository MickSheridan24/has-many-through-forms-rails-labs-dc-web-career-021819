<%= form_for @post do |f| %>
  <%= f.text_field :title %> <br>
  <%= f.text_area :content %> <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories do |cat|%>
    <%= cat.text_field :name %>
  <% end %>
  <%= f.collection_select :users, User.all, :id, :username %>
  <%= f.submit "Create Post" %>
<% end %>
